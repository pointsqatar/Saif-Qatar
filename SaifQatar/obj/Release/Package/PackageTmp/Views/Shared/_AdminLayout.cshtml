
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,400">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Droid+Sans">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lobster">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/prettyPhoto/css/prettyPhoto.css">
    <link rel="stylesheet" href="~/assets/css/flexslider.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/assets/ico/apple-touch-icon-57-precomposed.png">

</head>
<body>
    <!-- Header -->
    <div class="container">
        <div class="header row">
            <div class="span12">
                <div class="navbar">
                    <div class="navbar-inner">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <h1>
                            <a class="brand" target="_blank" href="@Url.Action("index","home")">Saif-Qatar Admin Panel</a>
                        </h1>
                        <div class="nav-collapse collapse">
                            <ul class="nav pull-right">
                                <li>
                                    <a href="@Url.Action("home","admin")"><i class="icon-home"></i><br />Home</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("aboutUs","admin")"><i class="icon-comments"></i><br />AboutUs</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("products","admin")"><i class="icon-tasks"></i><br />Products</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("events","admin")"><i class="icon-camera-retro"></i><br />Events</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("downloads","admin")"><i class="icon-cloud"></i><br />Downloads</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("gallery","admin")"><i class="icon-picture"></i><br />Gallery</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("contactus","admin")"><i class="icon-phone"></i><br />ContactUs</a>
                                </li>
                                <li>
                                    @if (HttpContext.Current.Session["User"] != null)
                                    {
                                        <a href="@Url.Action("logout","admin")"><i class="icon-signout"></i><br />Logout</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("login","admin")"><i class="icon-signin"></i><br />Login</a>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @RenderBody()


    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="widget span4">
                    <h4>Office Address</h4>
                    <p>
                        <i class="icon-map-marker"></i>
                        Industrial Area, Street No: 30,
                        Gate Number 28 P.O.Box: 12438 Doha, Qatar.
                    </p>
                </div>
                <div class="widget span4">
                    <h4>Phone:</h4>
                    <p><i class="icon-phone"></i> Phone: +974 - 6650 8394</p>
                </div>
                <div class="widget span4">
                    <h4>Email:</h4>
                    <p><i class="icon-envelope-alt"></i> Email: <a href="">info@saif-qatar.com</a></p>
                </div>
            </div>
            <div class="footer-border"></div>
            <div class="row">
                <div class="copyright span12">
                    <p>Developed by <a target="_blank" href="http://www.pointsqatar.com/">Points</a></p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Javascript -->
    @*<script src="~/assets/js/jquery-1.8.2.min.js"></script>*@
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery.flexslider.js"></script>
    <script src="~/assets/js/jquery.tweet.js"></script>
    <script src="~/assets/js/jflickrfeed.js"></script>
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="~/assets/js/jquery.ui.map.min.js"></script>
    <script src="~/assets/js/jquery.quicksand.js"></script>
    <script src="~/assets/prettyPhoto/js/jquery.prettyPhoto.js"></script>
    <script src="~/assets/js/scripts.js"></script>
</body>
</html>